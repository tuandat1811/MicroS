<body>
  <div class="container">
    <h1>SINNO URL Shrinker</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
      <label for="fullUrl" class="sr-only">Insert your URL</label>
      <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
      <button class="btn btn-success" type="submit">Shrink It!</button>
    </form>
    
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Full URL</th>
          <th scope="col">Short URL</th>
          <th scope="col">Clicks</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a id="short" href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
            <td><button class="btn" onclick="copylink()"><i class="fas fa-copy"></i></button></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
