  <!-- start function copy to clipboard -->
  <script>
    function copylink(){
      var copyText= document.getElementsByClassName(short);
      copyText.select();
      document.execCommand("copy");
    }
  </script>
  <!-- end function copy to clipboard-->
  <!-- start function clear cache-->
  <script>
    function clearlink(){
      $("#tbodyid").remove();
    }
  </script>
  <!-- end function clear cache-->
